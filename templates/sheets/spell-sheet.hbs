<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
  </header>
  <div class="sheet-content">
    <table>
      <tr>
        <th>{{localize "l5r4.spell.mastery"}}</th>
        <th>{{localize "l5r4.spell.range"}}</th>
        <th>{{localize "l5r4.spell.aoe"}}</th>
        <th>{{localize "l5r4.spell.duration"}}</th>
        <th>{{localize "l5r4.spell.raises"}}</th>
      </tr>
      <tr>
        <select name="system.ring">
          <option selected disabled>{{localize "l5r4.spell.ring"}}</option>
          {{#select item.system.ring}}
          {{#each config.rings as |name type|}}
          <option value="{{type}}">{{localize name}}</option>
          {{/each}}
          {{/select}}
        </select>
      </tr>
      <td>
        <input name="system.mastery" type="number" value="{{item.system.mastery}}" data-type="Number" />
      </td>
      <td>
        <input name="system.range" type="text" value="{{item.system.range}}" data-type="String" />
      </td>
      <td>
        <input name="system.aoe" type="text" value="{{item.system.aoe}}" data-type="String" />
      </td>
      <td>
        <input name="system.duration" type="text" value="{{item.system.duration}}" data-type="String" />
      </td>
      <td>
        <input name="system.raises" type="text" value="{{item.system.raises}}" data-type="String" />
      </td>
    </table>
    <h2>{{localize "l5r4.sheet.rulesSummary"}}</h2>
    {{editor item.system.specialRules target="system.specialRules" button=true owner=owner editable=editable}}
    <h2>{{localize "l5r4.sheet.description"}}</h2>
    {{editor item.system.description target="system.description" button=true owner=owner editable=editable}}
  </div>
</form>