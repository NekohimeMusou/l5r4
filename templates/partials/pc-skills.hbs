<section class="skills panelBorder">
  <h2>
    <div>{{localize "l5r4.sheet.skills"}}</div>
    <a class="item-create" data-type="skill" title="{{localize " l5r4.sheet.addSkill"}}">
      <i class="fas fa-plus"></i>
    </a>
  </h2>
  {{#each skill as |skill id|}}
  <div class="skill-item item" data-item-id="{{skill._id}}">
    <input class="skill-name" type="text" value="{{skill.name}}" placeholder="{{localize " l5r4.sheet.skillName"}}" />
    <input class="skill-value" type="number" value="{{skill.data.value}}" placeholder="0" data-type="Number">
    <select class="skill-type">
      <option selected disabled>{{localize "l5r4.skill.type"}}</option>
      {{#select skill.data.type}}
      {{#each @root.config.skillTypes as |name type|}}
      <option value="{{type}}">{{localize name}}</option>
      {{/each}}
      {{/select}}
    </select>
    <input class="school-check" type="checkbox" {{checked skill.data.school}} data-type="Boolean" />
    <input class="skill-emphasis" type="text" value="{{skill.data.emphasis}}" />
  </div>
  {{/each}}
</section>